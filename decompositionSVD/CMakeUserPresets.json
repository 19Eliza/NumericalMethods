{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 8,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "win_x64_local",
      "inherits": "default",
      "hidden": true,
      
      "toolchainFile": "C:/Libs/vcpkg/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\VC\\Tools\\MSVC\\14.34.31933\\bin\\Hostx64\\x64\\cl.exe",
        "CMAKE_CXX_COMPILER": "C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\VC\\Tools\\MSVC\\14.34.31933\\bin\\Hostx64\\x64\\cl.exe",
        "CMAKE_MAKE_PROGRAM": "c:/Project/ninja.exe"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "x64-debug",
      "displayName": "x64 Debug",
      "inherits": "win_x64_local",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "x64-release",
      "displayName": "x64 Release",
      "inherits": "x64-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "linux_x64_local",
      "hidden": true,
      "inherits": "default",
      "toolchainFile": "~/Libs/vcpkg/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc-11",
        "CMAKE_CXX_COMPILER": "g++-11"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "linux_debug_x64_local",
      "inherits": [
        "debug",
        "linux_x64_local"
      ],
      "displayName": "Config Linux x64 Debug (local)"
    },
    {
      "name": "linux_release_x64_local",
      "inherits": [
        "release",
        "linux_x64_local"
      ],
      "displayName": "Config Linux x64 Release (local)"
    }
  ]
}